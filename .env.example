# agentOS Environment Configuration Example
# Copy this to .env and fill in your values

# ============================================
# LLM Providers
# ============================================

# OpenAI
OPENAI_API_KEY=sk-...
# OPENAI_ORGANIZATION=org-...
# OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic
ANTHROPIC_API_KEY=sk-ant-...
# ANTHROPIC_BASE_URL=https://api.anthropic.com/v1

# Google Gemini
GOOGLE_API_KEY=...
# GOOGLE_BASE_URL=https://generativelanguage.googleapis.com/v1

# Grok (X.AI)
GROK_API_KEY=...
# GROK_BASE_URL=https://api.x.ai/v1

# OpenRouter
OPENROUTER_API_KEY=...
# OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Together AI
TOGETHER_API_KEY=...
# TOGETHER_BASE_URL=https://api.together.xyz/v1

# Ollama (local)
OLLAMA_HOST=http://localhost:11434

# ============================================
# Social Platforms
# ============================================

# X/Twitter OAuth2
# Required scopes: tweet.write, tweet.read, users.read, offline.access
X_CLIENT_ID=...
X_CLIENT_SECRET=...
X_REDIRECT_URI=http://localhost:8080/callback
X_ACCESS_TOKEN=...
X_REFRESH_TOKEN=...
# X_BEARER_TOKEN=...  # For app-only auth

# Discord Bot
DISCORD_BOT_TOKEN=...

# Telegram Bot
TELEGRAM_BOT_TOKEN=...

# ============================================
# Development Tools
# ============================================

# GitHub
GITHUB_TOKEN=ghp_...

# ============================================
# System Configuration
# ============================================

# Environment
ENVIRONMENT=development  # development, staging, production
DEBUG=false

# Directories
PLUGIN_DIR=./plugins
DATA_DIR=./data

# ============================================
# Observability
# ============================================

TRACE_ENABLED=true
METRICS_ENABLED=true
EVAL_ENABLED=true
REDACT_PII=true
TRACE_SAMPLE_RATE=1.0
LOG_LEVEL=INFO

# ============================================
# Policy & Governance
# ============================================

APPROVAL_REQUIRED=true
CONTENT_FILTER_ENABLED=true
RATE_LIMIT_ENABLED=true
DRY_RUN_MODE=false
AUTO_APPROVE_LOW_RISK=false
